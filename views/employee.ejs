            <tr>
              <td colspan="7" class="remarksRow" data-forid="6564e67ad7c3976da9da182d">11/2到11/8休假</td>
            </tr> -->

          </tbody>

        </table>
      </div>
      <div class="row">
        <div class="col"></div>
        <div class="col"></div>
        <div class="col"></div>
      </div>
    </div>
  </div>

  <!-- 模态对话框 -->
  <div class="modal" id="myModal">
    <div class="modal-dialog">
      <div class="modal-content">

        <!-- 模态对话框头部 -->
        <div class="modal-header">
          <h4 class="modal-title">修改或删除数据</h4>

          <button type="button" class="close" data-dismiss="modal">×</button>
        </div>

        <!-- 模态对话框主体 -->
        <div class="modal-body">
          name,employee number,enrollment data:
          <input type="text" id="data_name" class="form-control" readonly>
          <input type="text" id="data_number" class="form-control" readonly>
          <input type="text" id="data_date" class="form-control" readonly>
          position:
          <select class="form-control" id="data_position" name="position">
            <option value="host">host</option>
            <option value="bartender">bartender</option>
            <option value="server">server</option>
            <option value="busser">busser</option>
            <option value="trainee">trainee</option>
          </select>
          phone number:
          <input type="text" id="data_phone" class="form-control" placeholder="电话 长度10位" pattern="[0-9]{10}">
          status:
          <select class="form-control" name="status" id="data_status">
            <option value="onJob" selected>在职 onJob</option>
            <option value="quit">离职 quit</option>
            <option value="vacation">休假 vacation</option>
            <option value="partTime">兼职 partTime</option>
            <option value="others">其他 others</option>
          </select>
          remarks:
          <input type="text" id="data_remarks" class="form-control" placeholder="最长50字符">
        </div>


        <!-- 模态对话框底部 -->
        <div class="modal-footer d-flex justify-content-between">
          <div>
            <button type="button" class="btn btn-warning" onclick="submitdelete()" data-dismiss="modal">删除 X</button>
          </div>
          <div>
            <button type="button" class="btn btn-success" onclick="submitupdate()" data-dismiss="modal">确认</button>
            <button type="button" class="btn btn-danger" data-dismiss="modal">关闭</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  </div>


<!-- 加上默认日期今天 -->
